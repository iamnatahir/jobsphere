<style>
    body.dark-theme {
    background-color: #121212;
    color: #e0e0e0;
}

.container {
    max-width: 1200px;
}

h1 {
    color: #ffffff;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 10px;
}

.card {
    box-shadow: 0 4px 6px rgba(255, 255, 255, 0.1);
}

.card-title {
    color: #e0e0e0;
}

.table {
    color: #e0e0e0;
}

.table-dark {
    background-color: #1e1e1e;
}

.table th {
    font-weight: 600;
}

.btn-info, .btn-danger {
    margin-right: 5px;
}

.form-control, .form-select {
    background-color: #2c2c2c;
    color: #e0e0e0;
    border-color: #444;
}

.form-control::placeholder {
    color: #b9b7b7;
}

.form-control:focus, .form-select:focus {
    background-color: #3c3c3c;
    color: #ffffff;
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn-primary {
    background-color: #222121;
    border-color: #3c3c3c;
}

.btn-primary:hover {
    background-color: #3c3c3c;
    border-color: #3c3c3c;
}

@media (max-width: 768px) {
    .btn-info, .btn-danger {
        display: block;
        width: 100%;
        margin-bottom: 5px;
    }
}

</style>

<body class="dark-theme">
    <div class="container mt-5">
        <h1 class="mb-4 text-light">Job Management</h1>

        <!-- Job List Section -->
        <div class="card mb-4 bg-dark text-light">
            <div class="card-body">
                <h4 class="card-title mb-3">Search / Filter Options</h4>
                <form method="GET" action="/admin/job_management/all" class="row g-3">
                    <div class="col-md-6">
                        <input type="text" name="search" placeholder="Search by title, company..." class="form-control bg-secondary text-light">
                    </div>
                    <div class="col-md-4">
                        <select name="industry" class="form-select bg-secondary text-light">
                            <option value="">Select Industry</option>
                            <option value="technology">Technology</option>
                            <option value="healthcare">Healthcare</option>
                            <option value="finance">Finance</option>
                            <option value="education">Education</option>
                            <option value="manufacturing">Manufacturing</option>
                            <option value="retail">Retail</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-dark table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Job Title</th>
                        <th>Company Name</th>
                        <th>Industry</th>
                        <th>Location</th>
                        <th>Application Count</th>
                        <th>Expired</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                  
                    <% if (jobs.length > 0) { %>
                        <% jobs.forEach(job => { %>
                            <tr>
                                <td><%= job.jobTitle %></td>
                                <td><%= job.companyName %></td>
                                <td><%= job.industry %></td>
                                <td><%= job.location %></td>
                                <td><%= job.applicationCount %></td>
                                <td><span class="badge <%= job.expired ? 'bg-danger' : 'bg-success' %>"><%= job.expired ? 'Yes' : 'No' %></span></td>
                                <td>
                                    <a href="/admin/job_management/all/<%= job._id %>/delete" class="btn btn-danger btn-sm mt-1 mt-md-0">Delete Job</a>                
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No jobs found</td>
                        </tr>
                    <% } %>
                    <tr>
                        <td>Database Manager</td>
                        <td>Fesco</td>
                        <td>technology</td>
                        <td>Islamabad</td>
                        <td>0</td>
                        <td><span class="badge bg-danger">Yes</span></td>
                        <td>
                            <a href="/" class="btn btn-danger btn-sm mt-1 mt-md-0">Delete Job</a>                
                        </td>
                    </tr>
                    <tr>
                        <td>Nursing Staff</td>
                        <td>CMH Karachi</td>
                        <td>Healthcare</td>
                        <td>Karachi</td>
                        <td>2</td>
                        <td><span class="badge bg-success">No</span></td>
                        <td>
                            <a href="/" class="btn btn-danger btn-sm mt-1 mt-md-0">Delete Job</a>                
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
