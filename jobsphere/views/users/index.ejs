<style>
    /* *{
        background-color: #1e293b;
    } */
    .hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        padding: 4rem 0;
        align-items: center;
    }

    .hero-content {
        max-width: 600px;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        color: var(--secondary-text);
        margin-bottom: 1rem;
    }

    .hero h1 {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 2rem;
        color: var(--primary-text);
    }

    .hero-buttons {
        display: flex;
        gap: 1rem;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 2px solid white;
        color: bisque;
    }

    .btn-primary {
        background-color: var(--accent-color);
        color: white;
    }

    .btn-secondary {
        background-color: #1e293b;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        color: darkgrey;
    }

    .hero-images {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 1rem;
        height: 600px;
    }

    
    .hero-image {
        
    border-radius: 4rem;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    background-blend-mode: normal; /* Allows images to overlay colors */
}

    .hero-image:nth-child(1) {
        grid-row: span 2;
        background-color: #818cf8;
    }

    .hero-image:nth-child(2) {
        background-color: #67e8f9;
    }

    .hero-image:nth-child(3) {
        background-color: #fcd34d;
    }

    @media (max-width: 1024px) {
        .hero {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .hero-content {
            max-width: 100%;
        }

        .hero-buttons {
            justify-content: center;
        }

        .hero-images {
            height: 400px;
        }
    }

    @media (max-width: 640px) {
        .hero h1 {
            font-size: 2.5rem;
        }

        .hero-images {
            height: 300px;
        }
    }
</style>
<% if (successMessage.length > 0) { %>
    <div class="flash-message success">
        <%= successMessage %>
    </div>
<% } %>
<% if (errorMessage.length) { %>
    <div class="flash-message error">
        <%= errorMessage %>
    </div>
<% } %>
  
<div class="hero">
    <div class="hero-content">
        <p class="hero-subtitle">One Stop Solution to Find Jobs</p>
        <h1>Build your best job community starting from here.</h1>
        <div class="hero-buttons">
            <a href="/job/viewJob" class="btn Find">Find Jobs</a>
        


        </div>
    </div>
    <div class="hero-images">
        <div class="hero-image" style="background-image: url('/images/pic1.jpeg'), linear-gradient(#818cf8, #818cf8);"></div>
        <div class="hero-image" style=" background-image: url('/images/pic2.jpeg'), linear-gradient(#67e8f9, #67e8f9);"></div>
        <div class="hero-image"  style="margin-top:50px; background-image:  url('images/pic3.jpeg'), linear-gradient(#fcd34d, #fcd34d);"></div>
    

    </div>
    
</div>